@using projetGarderieWebApp.Models
@model EnfantDTO;
@*Si erreur du côté serveur... affichage du message d'erreur...*@
@if (ViewBag.MessageErreur != null)
{
    <br>
    <h2 class="alert-danger">@ViewBag.MessageErreur</h2>
}
else
{


    @*Affichage de la liste des enfants...*@
    <br>
    <h3>Liste des Enfant(s) (@ViewBag.listeEnfants.Length Enfant(s)) :</h3>
    <br>
    
    <form asp-area="" asp-controller="Enfant" asp-action="ViderListeEnfant" method="post">
        <table>
        <tr>
            <th>Nom</th>
            <th>Prénom</th>
            <th>Date naissance</th>
            <th>Adresse</th>
            <th>Ville</th>
            <th class="pr-2">Province</th>
            <th>Téléphone</th>
            <th><input class="btn btn-danger" id="vidation" onclick="if(confirm('Voulez vous?')){this.form.action='/Enfant/ViderListeEnfant'; this.form.method='post';submit();}" type="button" value="Vider liste Enfants"></th>
        </tr>
            <tr><td><input type="hidden" id="nomEnfant" name="nomEnfant"></td></tr>
            @foreach (EnfantDTO enfant in ViewBag.listeEnfants)
                {<tr>
                    <td>@enfant.Nom</td>
                    <td>@enfant.Prenom</td>
                    <td>@enfant.DateNaissance</td>
                    <td>@enfant.Adresse</td>
                    <td>@enfant.Ville</td>
                    <td>@enfant.Province</td>
                    <td class="pr-2">@enfant.Telephone</td>
                    <td><input class="btn btn-primary" onclick="document.getElementById('nomEnfant').value = '@enfant.Nom'; this.form.action='/Enfant/FormModifier'; this.form.method='get'; submit();" type="button" value="Modifier">
                        <input class="btn btn-primary" onclick="if(confirm('confirmation silvouple')){document.getElementById('nomEnfant').value = '@enfant.Nom'; this.form.action='/Enfant/SupprimerEnfant'; this.form.method='post'; submit();}" type="button" value="Supprimer"></td>
                    
                </tr>}
        </table>
        
    </form>
    
    <script>
        if(@ViewBag.listeEnfants.Length==0){
            document.getElementById('vidation').style.display = "none";
        }
    </script>
    
    <form asp-area="" asp-controller="Enfant" asp-action="" method="get">
    
    <table>
        <tbody>

            
        </tbody>
    </table>
    </form>

    <br />
    <h3>Ajouter une Enfant</h3>
    <br />

    <form asp-controller="Enfant" asp-action="AjouterEnfant" method="post">
        <table>
            <tbody>
            <tr>
                <td><label asp-for="Nom"></label></td>
                <td> <input asp-for="Nom"> </td>
            </tr>
            <tr>
                <td><label asp-for="Prenom"></label></td>
                <td> <input asp-for="Prenom"> </td>
            </tr>
            <tr>
                <td> <label asp-for="DateNaissance"></label></td>
                <td> <input asp-for="DateNaissance" type="date"> </td>
            </tr>
            <tr>
                <td> <label asp-for="Adresse"></label></td>
                <td> <input asp-for="Adresse"> </td>
            </tr>
            <tr>
                <td> <label asp-for="Ville"></label></td>
                <td> <input asp-for="Ville"> </td>
            </tr>
            <tr>
                <td> <label asp-for="Province"></label> </td>
                <td> <input asp-for="Province"> </td>
            </tr>
            <tr>
                <td> <label asp-for="Telephone"></label> </td>
                <td> <input asp-for="Telephone"> </td>
            </tr>
            <tr><td><input type="submit" value="Ajouter"></td></tr>   
        </tbody>
         
    </table>
        
    </form>
}

